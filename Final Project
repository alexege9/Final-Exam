import java.util.Scanner; // Scanner is in the java.util package 

public class Final {
	public static void main (String [] args) {
		
			// Scanner
			Scanner input = new Scanner(System.in);
			
			
			//Prompt user to enter the name of the student
			System.out.println("Enter the name of the student: ");
			String name = input.next();
			
			//Prompt the user to enter the age
			System.out.println("Enter the age of " + name + ":");
			int age = input.nextInt();
			
			//Prompt the user to enter the grades of the students
			System.out.println("Enter the midterm and final grade in math:"); 
			double num1 = input.nextDouble();
			double num2 = input.nextDouble();
			
			//Calculate Grade in math
			System.out.println("The grade " + name + " made in math is: ");
			double grade = (num1 + num2) / 2;
			
			
			 
	}
}
